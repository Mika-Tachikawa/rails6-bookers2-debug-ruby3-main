<table class='table'>
  <tr><%= image_tag user.get_profile_image, size:'100x100' %></tr>
  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= user.introduction %></th>
  </tr>
    <tr>
    <th><%= link_to 'フォロー数',  [user, :followings] %></th>
  </tr>          
    <th><%= link_to 'フォロワー数',  [user, :followers] %></th>
</table>

      <% if current_user.following?(user) %>
          <%= link_to "フォロー外す", book_user_relationships_path(user.id), method: :delete %>
      <% else %>
          <%= link_to "フォローする", book_user_relationships_path(user.id), method: :post %>
      <% end %>
　
<div class='row'>
  <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block" do %>
    <i class="fas fa-user-cog"></i>
  <% end %>
</div>