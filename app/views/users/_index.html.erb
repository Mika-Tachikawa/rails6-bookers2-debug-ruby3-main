<table class='table'>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% users.each do |user| %>
      <tr>
        <td><%= image_tag user.get_profile_image, size: '50x50' %></td>
        <td><%= user.name %></td>
<!-- フォローボタンの追加 -->
<!-- relationships/btnは、app/views/relationships/_btn.html.erbというパーシャルを示している -->
<!-- relationships/btnは、ユーザーのフォロー・アンフォローに使われることが多い -->
<!-- userの情報に基づいてボタンの表示を変更することができる -->
        <td><%= render "relationships/btn", user: user %></td>        
<!-- ユーザーidを含むCSSクラスをclass属性に追加、ユーザーごとに違うスタイルを適用できるようになる -->
        <td><%= link_to 'Show', user ,class: "user_#{user.id}"%></td>
      </tr>
    <% end %>
  </tbody>
</table>
